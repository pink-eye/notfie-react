{
	"compilerOptions": {
		"allowJs": true,
		"target": "es6",
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"*": ["node_modules/*"],
			"renderer/*": ["src/renderer/*"],
			"main/*": ["src/main/*"]
		},
		"jsx": "react"
	},
	"include": ["src/**/*"]
}
